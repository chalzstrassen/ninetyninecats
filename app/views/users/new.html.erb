<h1>Sign up here</h1>

<%= render partial: "layouts/flashmessages" %>

<form action="<%= users_url %>" method="POST">
  <%= csrf_token %>
  <label for="user_name">Create a new user name</label>
  <input type="text" name="user[user_name]">
  <br>
  <label for="password">Create a new password</label>
  <input type="password" name="user[password]">
  <button>Sign up!</button>
</form>
